<form>
	<div class="form-group">
		<label>Title</label>
		{{input type="text" class="form-control" name=title value=title placeholder="Add Title..."}}
	</div>
	<div class="form-group">
		<label>Author</label>
		{{input type="text" class="form-control" name=author value=author placeholder="Add Author..."}}
	</div>
	<div class="form-group">
		<label>Content</label>
		{{textarea name=message class="form-control" value=message placeholder="Describe Note..."}}
	</div>
	<button {{action 'addNewNote'}} class="btn btn-primary">Submit</button>
</form>
{{outlet}}
